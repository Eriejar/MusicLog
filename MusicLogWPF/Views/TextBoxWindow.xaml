<Window x:Class="MusicLogWPF.TextBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicLogWPF"
        mc:Ignorable="d" 
		Height="194.8" Width="405.6" ResizeMode="NoResize">
	<Grid>
		<Grid.ColumnDefinitions>
		</Grid.ColumnDefinitions>
		<StackPanel>
			<TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Name:"  FontWeight="Bold" Margin="45,30,0,0"/>
			<TextBox x:Name="NameEntryTextBox"   TextWrapping="Wrap" Background="{x:Null}" Margin="45,10,45,0"/>
			<StackPanel Orientation="Horizontal" Margin="235,15,0,0" HorizontalAlignment="Left" Width="164">
				<Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Margin="10,0,5,0" HorizontalAlignment="Left" Width="50"/>
				<Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" HorizontalAlignment="Right" Margin="5,0,10,0" Width="50"/>
			</StackPanel>
		</StackPanel>

	</Grid>
</Window>
